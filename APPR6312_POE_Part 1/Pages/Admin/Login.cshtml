@page
@model APPR6312_POE_Part_1.Pages.Admin.LoginModel
@{
}

<style>

    form {
        border: 7px solid #00A36C;
        width: 50%;
        text-align: center;
        justify-content: center;
        max-width: 400px;
        margin: auto;
    }

    input[type=text], input[type=password] {
        width: 40%;
        padding: 5px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
        justify-content: center;
    }

    button {
        background-color: #00A36C;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 30%;
    }

    button:hover {
        opacity: 0.8;
    }

    .cancelbtn {
        width: auto;
        padding: 10px 18px;
        background-color: #f44336;
    }

        .cancelbtn:hover {
            opacity: 0.8;
        }

    .container {
        padding: 16px;
        color: #FFFFFF;
    }

    html, body {
        width: 100%;
        height: 100%;
    }

    body {
        background: linear-gradient(-45deg, orange, purple);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }
    
</style>

<!DOCTYPE html>
<html>
<head>
    <title>Admin Login</title>
</head>
<body>
    <form action="" method="POST">

        <div class="container">
            <label for="u_Email"><b>User Email</b></label>
            <br>
            <input type="text" placeholder="User Email" name="u_Email" required>

            <p>

                <label for="u_Pass"><b>Password</b></label>
                <br>
                <input type="password" placeholder="Password" name="u_Pass" required>
            </p>
            <p>
                <button type="submit" name="login">Login</button>




                <div class="clearfix">
                    <button type="reset" class="cancelbtn">Clear</button>
                </div>
            </p>
        </div>
    </form>
</body>
</html>