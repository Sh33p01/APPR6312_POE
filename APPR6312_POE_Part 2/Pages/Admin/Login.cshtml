@page
@model APPR6312_POE_Part_1.Pages.Admin.LoginModel
@{
}

<style>


    form {
        background-color: rgb(255, 255, 255, 0.2);
        -webkit-backdrop-filter: blur(10px);
        backdrop-filter: blur(10px);
        display: flex;
        flex-direction: column;
        border-radius: 20px;
        font-size: x-large;
        padding: 10px;
    }

    input[type=text], input[type=password] {
        width: 70%;
        padding: 5px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
        align-content: center;
    }

    .admin {
        color: white;
    }

    button {
        background-color: #00A36C;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 30%;
    }

        button:hover {
            opacity: 0.8;
        }

    .cancelbtn {
        width: auto;
        padding: 10px 18px;
        background-color: #f44336;
    }

        .cancelbtn:hover {
            opacity: 0.8;
        }

    .container {
        padding: 16px;
        color: #FFFFFF;
    }

    html, body {
        width: 100%;
        height: 100%;
    }


    body {
        background: linear-gradient(-45deg, orange, purple);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }
</style>

<!DOCTYPE html>
<html>
<head>
    <title>Admin Login</title>
</head>
<body>
    <form method="POST">
        <div class="admin">
            <h2>Admin Login</h2>
        </div>
        <div class="container">
            <label for="uEmail"><b>User Email</b></label>
            <br>
            <input type="text" placeholder="User Email" name="uEmail" required style="text-align:center">

            <p>

                <label for="uPass"><b>Password</b></label>
                <br>
                <input type="password" placeholder="Password" name="uPass" required style="text-align:center">
            </p>
            <p>
                <button type="submit" name="login">Login</button>




                <div class="clearfix">
                    <button type="reset" class="cancelbtn">Clear</button>
                </div>
            </p>
        </div>
    </form>
</body>
</html>